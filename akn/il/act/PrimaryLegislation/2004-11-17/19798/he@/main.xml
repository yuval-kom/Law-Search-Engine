        <num></num>
        <title>
          <content>
            <p>תוספת</p>
          </content>
        </title>
        <subtitle eId="eId">
          <num></num>
          <content>
            <p>
              <wikicomment font-size="x-small">(<ref href="#point_1">סעיף 1(ג)</ref>)</wikicomment>
            </p>
          </content>
        </subtitle>
        <subtitle eId="eId">
          <num></num>
          <content>
            <p>(המנון המדינה)</p>
          </content>
        </subtitle>
        <list>
          <point eId="appendix__point_none">
            <heading>
              <authorialNote placement="side">
                <p xml:space="preserve"> </p>
              </authorialNote>
            </heading>
            <num></num>
            <content>
              <p>
